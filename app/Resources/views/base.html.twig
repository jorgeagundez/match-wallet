<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
        <title>{% block title %}Match your Wallet!{% endblock %}</title>
        
        {% block stylesheets %}
            <!-- CSS files -->
            <link href="{{ asset('css/main.css') }}" rel="stylesheet">
            <!-- Bootstrap -->
            <link href="{{ asset('library/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
        {% endblock %}
        
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        
    </head>
    <body>

        <header>
            <div class="container">
                <div class="row">
                    <div class="col-md-8">
                    </div>
                    <div class="col-md-4 status">
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            <p>{{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} | <a href="{{ path('fos_user_security_logout') }}"> {{ 'layout.logout'|trans({}, 'FOSUserBundle') }} </a> </p>
                            {% else %}
                            <p><a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a></p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </header>

        <div class="container">
            {% block body %}{% endblock %}
        </div>
        

        {% block javascripts %}
            <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
            <!-- Bootstrap's JavaScript  -->
            <script src="{{ asset('library/bootstrap/js/bootstrap.min.js') }}"></script>
            <!-- js files  -->
            <script src="{{ asset('js/control.js') }}"></script>
        {% endblock %}
    </body>
</html>
